{
  "name": "lgotniki-backend",
  "version": "1.0.0",
  "description": "Backend API для системы учета льготного проезда",
  "main": "dist/index.js",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "migrate:up": "node-pg-migrate up --migrations-dir src/migrations --migration-file-language sql",
    "migrate:down": "node-pg-migrate down --migrations-dir src/migrations --migration-file-language sql",
    "migrate:reset": "node scripts/reset-database.js",
    "migrate:drop-all": "psql $DATABASE_URL -f scripts/drop-all-tables.sql && npm run migrate:up",
    "migrate:create": "node-pg-migrate create --migrations-dir src/migrations --migration-file-language sql",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "express": "^4.18.2",
    "pg": "^8.11.3",
    "dotenv": "^16.3.1",
    "cors": "^2.8.5",
    "helmet": "^7.1.0",
    "express-validator": "^7.0.1",
    "jsonwebtoken": "^9.0.2",
    "bcryptjs": "^2.4.3",
    "multer": "^1.4.5-lts.1",
    "xlsx": "^0.18.5",
    "csv-parse": "^5.5.2",
    "uuid": "^9.0.1",
    "zod": "^3.22.4",
    "node-pg-migrate": "^6.2.2"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/node": "^20.10.6",
    "@types/pg": "^8.10.9",
    "@types/cors": "^2.8.17",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/bcryptjs": "^2.4.6",
    "@types/multer": "^1.4.11",
    "@types/uuid": "^9.0.7",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3"
  }
}


